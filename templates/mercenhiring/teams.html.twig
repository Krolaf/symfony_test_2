{% extends 'base.html.twig' %}

{% block content %}
<h1>Liste des équipes</h1>

<a href="{{ path('team_new') }}" class="btn btn-primary">Créer une nouvelle équipe</a>
<div class="content-form-container">
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Leader</th>
            <th>Membres</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.leader.name }}</td>
                <td>
                    <ul>
                        {% for member in team.members %}
                            {{ member.name }}
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('team_edit', { id: team.id }) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune équipe trouvée.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
