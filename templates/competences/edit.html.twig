{% extends 'base.html.twig' %}

{% block title %}Modifier une compétence{% endblock %}

{% block content %}
<div class="competence-form-container">
    <h1>Modifier la compétence</h1>
    
    {{ form_start(form, { 'attr': { 'class': 'competence-form' } }) }}
        <div class="form-group">
            {{ form_label(form.name, 'Nom de la compétence') }}
            {{ form_widget(form.name, { 'attr': { 'class': 'form-input' } }) }}
            {{ form_errors(form.name) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, { 'attr': { 'class': 'form-textarea' } }) }}
            {{ form_errors(form.description) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.lvl, 'Niveau') }}
            {{ form_widget(form.lvl, { 'attr': { 'class': 'form-input' } }) }}
            {{ form_errors(form.lvl) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.mercenheros, 'Héros associés') }}
            {{ form_widget(form.mercenheros, { 'attr': { 'class': 'form-multiselect' } }) }}
            {{ form_errors(form.mercenheros) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Mettre à jour</button>
            <a href="{{ path('competences_index') }}" class="btn-cancel">Annuler</a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
